extends layouts/main
include ./activity-card.jade

block title
  | #{xourse.title}

block modals
                
block content
  div.container
    .page-header
      div.pull-right.btn-toolbar(role="toolbar")            
          div#search-field
             div.inner-addon.right-addon
               i.fa.fa-search
               input.form-control(id="xourse-search",type="search",placeholder="Search")
               
      h1 #{xourse.title}
        
    div(class="xourse", data-commit=xourse.commit, data-user=user._id.toString())
      for activityUrl in xourse.activityList
        +activityCard(xourse.locator, activityUrl, xourse.activities[activityUrl])
    hr
    .row
      .col-md-12
        p You can download a 
          a.btn.btn.btn-primary(type="button", href="certificate")
            | <i class="fa fa-certificate"></i> Certificate
          | &nbsp;as a record of your successes.
    
